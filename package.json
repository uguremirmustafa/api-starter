{
  "name": "tasks-api",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "cross-env DB_MIGRATING=true NODE_ENV=development drizzle-kit migrate",
    "db:push": "cross-env NODE_ENV=development npx drizzle-kit push",
    "db:studio": "cross-env NODE_ENV=development npx drizzle-kit studio",
    "build": "npx tsc && npx tsc-alias",
    "start": "cross-env NODE_ENV=production node ./dist/src/index.js"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.2.0",
    "@hono/node-server": "^1.13.3",
    "@hono/zod-openapi": "^0.16.4",
    "@scalar/hono-api-reference": "^0.5.157",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.35.3",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.8",
    "hono-pino": "^0.4.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "postgres": "^3.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^0.1.2",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
